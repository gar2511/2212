<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import com.example.components.CustomToggle?>
<?import com.example.components.CustomButton?>

<StackPane xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.controller.ParentMenuController"
      styleClass="parent-menu-background"
      stylesheets="@../styles/parent_menu.css">


    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 0 50 0 50;">
        <!-- Title -->
        <Label text="Parent Control Settings" styleClass="parent-menu-title-label" />
        <StackPane styleClass="parent-menu-container-background">

            <VBox spacing="15" styleClass="parent-menu-container">

    <!-- Toggle Switch -->
    <HBox alignment="CENTER" spacing="10">
        <Label text="Parental Controls" styleClass="parent-menu-section-label" />
        <CustomToggle fx:id="parentModeToggle" onAction="#handleToggleParentMode" styleClass="toggle-label"/>
    </HBox>

<VBox alignment="CENTER" spacing="10">
    <!-- Select Save -->
    <ComboBox fx:id="selectSaveDropdown" 
              promptText="Select Save" 
              styleClass="parent-menu-dropdown"/>
</VBox>
    <!-- Time Limit -->
    <VBox alignment="CENTER" spacing="10" visible="false" fx:id="timeLimitSection">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <RadioButton fx:id="timeLimitToggle" text="Time Limit" onAction="#handleTimeLimitToggle" />
            <TextField fx:id="timeLimitInput" promptText="Duration/Day" visible="false" />
        </HBox>
        <Button fx:id="updateTimeLimitButton" text="Update" visible="false" onAction="#handleUpdateTimeLimit" />
    </VBox>

    <!-- View Stats -->
    <HBox alignment="CENTER_LEFT" spacing="10" visible="false" fx:id="viewStatsSection">
        <Label fx:id="petScoreLabel" text="Score: 0" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    </HBox>


    <!-- Revive Pet -->
    <Button fx:id="revivePetButton" text="Revive Pet" visible="false" onAction="#revivePet" />

    <!-- Inventory Section TODO: Implement inventory modification-->
    <HBox alignment="CENTER" spacing="10" visible="false" fx:id="inventorySection">
        <VBox alignment="CENTER">
            <Label text="Item1" style="-fx-font-size: 12px;" />
            <Spinner fx:id="item1Spinner" min="0" max="100" initialValue="0" onMouseReleased="#updateItem1" />
        </VBox>
        <VBox alignment="CENTER">
            <Label text="Item2" style="-fx-font-size: 12px;" />
            <Spinner fx:id="item2Spinner" min="0" max="100" initialValue="0" onMouseReleased="#updateItem2" />
        </VBox>
        <VBox alignment="CENTER">
            <Label text="Item3" style="-fx-font-size: 12px;" />
            <Spinner fx:id="item3Spinner" min="0" max="100" initialValue="0" onMouseReleased="#updateItem3" />
        </VBox>
        <VBox alignment="CENTER">
            <Label text="Item4" style="-fx-font-size: 12px;" />
            <Spinner fx:id="item4Spinner" min="0" max="100" initialValue="0" onMouseReleased="#updateItem4" />
        </VBox>
                </HBox>

            </VBox>
        </StackPane>
    <!-- Go Back Button -->
    <Button fx:id="goBackButton" text="Go Back" onAction="#handleGoBack" />
    </VBox>

</StackPane>