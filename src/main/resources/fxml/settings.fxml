<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import com.example.components.CustomSlider?>
<?import com.example.components.CustomToggle?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.controller.SettingsController"
      spacing="20" alignment="CENTER" styleClass="settings">

    <Label text="Settings" styleClass="title-label"/>

    <HBox spacing="15" alignment="CENTER">
        <Label text="Parental Controls" styleClass="subtitle-label"/>
        <CustomToggle fx:id="parentalControlsToggle"/>
    </HBox>

    <Button text="Parental Controls"
            onAction="#goParent"
            styleClass="back-button"/>

    <HBox spacing="15" alignment="CENTER">
        <Label text="Sound Volume" styleClass="subtitle-label"/>
        <CustomSlider fx:id="volumeSlider" prefWidth="200"/>
    </HBox>

    <Button text="Back to Main Menu" 
            onAction="#goBack" 
            styleClass="back-button"/>

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>
</VBox>