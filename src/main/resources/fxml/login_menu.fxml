<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import com.example.components.CustomButton?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.Circle?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.controller.LoginController"
           styleClass="login-background"
           stylesheets="@../styles/login_menu.css">
           
    <VBox alignment="CENTER" spacing="20">
        <!-- Title -->
        <Label fx:id="titleLabel" text="Create Parent Account" styleClass="login-title-label"/>
        
        <!-- Main Container -->
        <StackPane styleClass="login-container-background">
            <VBox styleClass="login-container">
                <!-- Username Section -->
                <VBox spacing="5">
                    <Label text="Username" styleClass="input-label"/>
                    <StackPane>
                        <TextField fx:id="usernameField" 
                                 promptText="Enter username"
                                 styleClass="input-field"/>
                        <StackPane fx:id="userErrorIcon" 
                                 styleClass="error-icon"
                                 mouseTransparent="true"
                                 StackPane.alignment="CENTER_RIGHT">
                            <Region styleClass="error-circle" minWidth="16" minHeight="16"/>
                            <Text text="!" styleClass="error-text"/>
                        </StackPane>
                    </StackPane>
                </VBox>

                <!-- Password Section -->
                <VBox spacing="5">
                    <Label text="Password" styleClass="input-label"/>
                    <StackPane>
                        <PasswordField fx:id="passwordField" 
                                     promptText="Enter password"
                                     styleClass="input-field"/>
                        <StackPane fx:id="passwordErrorIcon" 
                                 styleClass="error-icon"
                                 mouseTransparent="true"
                                 StackPane.alignment="CENTER_RIGHT">
                            <Region styleClass="error-circle" minWidth="16" minHeight="16"/>
                            <Text text="!" styleClass="error-text"/>
                        </StackPane>
                    </StackPane>
                </VBox>

                <!-- Confirm Password Section -->
                <VBox spacing="5">
                    <Label text="Confirm Password" styleClass="input-label"/>
                    <StackPane>
                        <PasswordField fx:id="confirmPasswordField" 
                                     promptText="Confirm password"
                                     styleClass="input-field"/>
                        <StackPane fx:id="confirmPasswordErrorIcon" 
                                 styleClass="error-icon"
                                 mouseTransparent="true"
                                 StackPane.alignment="CENTER_RIGHT">
                            <Region styleClass="error-circle" minWidth="16" minHeight="16"/>
                            <Text text="!" styleClass="error-text"/>
                        </StackPane>
                    </StackPane>
                </VBox>

                <!-- Buttons Section -->
                <HBox spacing="20" alignment="CENTER">
                    <CustomButton fx:id="loginButton" 
                            text="LOGIN" 
                            onAction="#handleLogin"
                            styleClass="login-button"/>
                    <CustomButton fx:id="goBackButton" 
                            text="BACK" 
                            onAction="#goBack"
                            styleClass="back-button"/>
                </HBox>
            </VBox>
        </StackPane>

        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>
    </VBox>
</StackPane>
