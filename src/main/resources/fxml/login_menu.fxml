<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import com.example.components.CustomButton?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.controller.LoginController"
           styleClass="login-background"
           stylesheets="@../styles/login_menu.css">
           
    <VBox alignment="CENTER" spacing="20">
        <!-- Title -->
        <Label text="Parent Login" styleClass="login-title-label"/>
        
        <!-- Main Container -->
        <StackPane styleClass="login-container-background">
            <VBox styleClass="login-container">
                <!-- Username Section -->
                <VBox spacing="5">
                    <Label text="Username" styleClass="input-label"/>
                    <TextField fx:id="usernameField" 
                             promptText="Enter username"
                             styleClass="input-field"/>
                    <Label fx:id="userError" 
                           text="Invalid username"
                           styleClass="error-label"
                           visible="false"/>
                </VBox>

                <!-- Password Section -->
                <VBox spacing="5">
                    <Label text="Password" styleClass="input-label"/>
                    <PasswordField fx:id="passwordField" 
                                 promptText="Enter password"
                                 styleClass="input-field"/>
                    <Label fx:id="passwordError" 
                           text="Invalid password"
                           styleClass="error-label"
                           visible="false"/>
                </VBox>

                <!-- Buttons Section -->
                <HBox spacing="20" alignment="CENTER">
                    <CustomButton fx:id="loginButton" 
                            text="LOGIN" 
                            onAction="#handleLogin"
                            styleClass="login-button"
                            disable="true"/>
                    <CustomButton fx:id="goBackButton" 
                            text="BACK" 
                            onAction="#goBack"
                            styleClass="back-button"/>
                </HBox>
            </VBox>
        </StackPane>

        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>
    </VBox>
</StackPane>
